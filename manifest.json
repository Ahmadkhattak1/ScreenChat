{
    "manifest_version": 3,
    "name": "ScreenChat - AI Agent for Your Browser",
    "version": "1.0.0",
    "description": "Chat with your screen. AI agent that sees your page, answers questions, helps fill forms, and assists with tasks.",
    "permissions": [
        "activeTab",
        "tabs",
        "storage",
        "downloads",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>",
        "https://screenchat-backend-production.up.railway.app/*",
        "http://localhost:3000/*"
    ],
    "action": {
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "capture-visible": {
            "suggested_key": {
                "default": "Ctrl+Shift+S",
                "mac": "Command+Shift+S"
            },
            "description": "Capture visible area"
        },
        "capture-full": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "Command+Shift+F"
            },
            "description": "Capture full page"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "content.css",
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}